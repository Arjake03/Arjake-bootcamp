<mvc:View
    controllerName="com.training.exer1corpuz.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    displayBlock="true">

    <Page
        id="page"
        title="{i18n>title}"
        floatingFooter="true">

        <VBox
            id="idVBox"
            class="sapUiSmallMargin">

            <f:SimpleForm
                id="idSimpleForm"
                editable="true"
                layout="ResponsiveGridLayout"
                title="{i18n>detailsTitle}"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false">
                <f:content>
                    <Label id="idLblFName" text="{i18n>firstNameLbl}" />
                    <Input id="idInptFName" value="" />

                    <Label id="idLblLName" text="{i18n>lastName}" />
                    <Input id="idInptLName" value="" />

                    <Label id="idLblMOP" text="{i18n>modeOfPayment}" />
                    <Select id="idSelMOP" forceSelection="false" change="onChangeMOP">
                        <items>
                            <core:Item id="idItmCOD" text="Cash on Delivery" key="COD" />
                            <core:Item id="idItmCC" text="Credit Card" key="CC" />
                            <core:Item id="idItmGCash" text="GCash" key="GCASH" />
                        </items>
                    </Select>
                    <Label id="idLblPhone" text="{i18n>mobileNumber}" visible="false" />
                    <Input id="idInputPhone" value="" visible="false" />

                    <Label id="idLblCC" text="{i18n>creditCardDetails}" visible="false" />
                    <Input id="idInputCC" value="" visible="false" />
                </f:content>
            </f:SimpleForm>
<core:Fragment fragmentName="com.training.exer1corpuz.fragment.ShoppingCart" type="XML" />
        </VBox>
        <footer>
            <Toolbar id="idFooterToolbar">
                <ToolbarSpacer id="idTSpacerFooter" />
                <Button
                    id="idBtnCheckout"
                    text="{i18n>checkout}"
                    tooltip="{i18n>checkoutTooltip}"
                    press="onPressCheckout" />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
